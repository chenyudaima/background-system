<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chenyudaima.mapper.SysMenuMapper">

    <resultMap id="BaseResultMap" type="com.chenyudaima.model.SysMenu">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
            <result property="routerPath" column="router_path" jdbcType="VARCHAR"/>
            <result property="routerComponent" column="router_component" jdbcType="VARCHAR"/>
            <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="order" column="order" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,`name`,parent_id,
        router_path,router_component,`description`,`order`
    </sql>

    <select id="selectByUserId" resultType="com.chenyudaima.vo.SysMenuVo">
        SELECT
            <include refid="Base_Column_List"/>
        FROM sys_menu
        where id in (select menu_id
                     from sys_role_menu
                     where role_id in (select role_id
                                       from sys_user_role
                                       where user_id = 1))
        order by `order`

    </select>

</mapper>
